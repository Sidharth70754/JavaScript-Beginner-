const marvel_heros = ["thor","ironman","spierman"]
const dc_heros = ["superman","flash","batman"]

//marvel_heros.push(dc_heroes)

const allheros = marvel_heros.concat(dc_heros)
console.log(allheros);

// another opoerator that used to merge the variable

const all_new_heros = [...marvel_heros, ...dc_heros]
console.log(all_new_heros);


// another methos to solve the array problem 

const another_array = [1,2,3,[4,5,6],7,[6,7,[4,7]]]

const real_another_array = another_array.flat(Infinity)
console.log(real_another_array);

// how to convert simple string into array

console.log(Array.isArray("Sidharth"))
console.log(Array.from("Sidharth"));
console.log(Array.from({name: "Sidharth"})); // interesting


let score1 = 100
let score2  = 200
let score3 = 300

